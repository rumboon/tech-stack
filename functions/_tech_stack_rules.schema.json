{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/fish-plugins/tech-stack/_tech_stack_rules.schema.json",
  "title": "Tech Stack Rules",
  "description": "Schema for technology detection rules",
  "type": "object",
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/rule"
      }
    }
  },
  "required": ["rules"],
  "definitions": {
    "rule": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Identification name"
        },
        "icon": {
          "type": "string",
          "description": "Short icon text to display"
        },
        "label": {
          "type": "string",
          "description": "Display name of the technology"
        },
        "color": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{6}$",
          "description": "Foreground color in hex format (without #)"
        },
        "bg_color": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{6}$",
          "description": "Background color in hex format (without #)"
        },
        "file_indicators": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "List of files/directories/patterns that indicate this technology"
        }
      },
      "required": ["id", "icon", "label", "color", "bg_color", "file_indicators"],
      "additionalProperties": false
    }
  }
}
