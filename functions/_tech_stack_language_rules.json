{
  "$schema": "./_tech_stack_rules.schema.json",
  "rules": [
    {
      "name": "Node.js",
      "icon": "Node",
      "color": "ffffff",
      "bg_color": "417e38",
      "file_indicators": ["package.json", "node_modules"]
    },
    {
      "name": "Python",
      "icon": "Py",
      "color": "ffd343",
      "bg_color": "1c3b56",
      "file_indicators": ["requirements.txt", "Pipfile", "pyproject.toml", "setup.py", "poetry.lock", "environment.yml", "manage.py", "app.py", "main.py"]
    },
    {
      "name": "Rust",
      "icon": "Rst",
      "color": "f74c00",
      "bg_color": "421400",
      "file_indicators": ["Cargo.toml", "Cargo.lock"]
    },
    {
      "name": "Go",
      "icon": "Go",
      "color": "ffffff",
      "bg_color": "007d9c",
      "file_indicators": ["go.mod", "go.sum", "Gopkg.toml"]
    },
    {
      "name": "PHP",
      "icon": "PHP",
      "color": "ffffff",
      "bg_color": "4f5b93",
      "file_indicators": ["composer.json", "composer.lock"]
    },
    {
      "name": "Ruby",
      "icon": "Ruby",
      "color": "ffffff",
      "bg_color": "cc342d",
      "file_indicators": ["Gemfile", "Rakefile", "*.gemspec"]
    },
    {
      "name": "Java",
      "icon": "Java",
      "color": "f89917",
      "bg_color": "5283a3",
      "file_indicators": ["pom.xml", "build.gradle", "build.gradle.kts", "build.sbt", "ivy.xml", "*.java", "*.scala", "*.kt"]
    },
    {
      "name": ".NET",
      "icon": ".NET",
      "color": "d8d8d8",
      "bg_color": "4421b5",
      "file_indicators": ["*.csproj", "*.fsproj", "*.vbproj", "*.sln", "packages.config", "Directory.Packages.props"]
    }
  ]
}
